{
  "compilerOptions": {
    "outDir": "dist-esm",
    "target": "ES2015",
    "module": "ES6",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "inlineSources": true,
    "sourceMap": true,
    "isolatedModules": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "preserveWatchOutput": true,
    "pretty": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "exclude": ["node_modules", "test", "dist", "dist-esm", "types"]
}
